<h1> <%= @project.name %> </h1>
<p> <%= @project.description %> </p>

<h3>Project Manager: <%= @project.manager %> </h3>

<h4> Project Members </h4>
<ul>
  <% if @users %>
    <% @users.each do |user| %>
      <li>
      <%= user.full_name %><% if user.email %><%=', ' + user.email %><% end %>
       </li>
    <% end %>
  <% end %>
</ul>

<h4> Project Tasks </h4>
<ul>
  <% if @tasks %>
    <% @tasks.each do |task| %>
      <li>
      <%= task.name %><% if task.user %><%=': ' + task.user.full_name %><% end %>
       </li>
    <% end %>
  <% end %>
</ul>
