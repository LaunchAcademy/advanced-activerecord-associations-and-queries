<h1> <%= @project.name %> </h1>
<p> <%= @project.description %> </p>

<% if @project.manager %>
  <h3>Project Manager: <%= @project.manager.full_name %> </h3>
  
  <% if @managed_employees %>
  <h4> Managed Employees </h4>
  <ul>
      <% @managed_employees.each do |employee| %>
        <li>
          <%= employee.full_name %><% if employee.email %><%=', ' + employee.email %><% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>

<h4> Project Members </h4>
<ul>
  <% if @users %>
    <% @users.each do |user| %>
      <li>
        <%= user.full_name %><% if user.email %><%=', ' + user.email %><% end %>
      </li>
    <% end %>
  <% end %>
</ul>

<h4> Project Tasks </h4>
<ul>
  <% if @tasks %>
    <% @tasks.each do |task| %>
      <li>
        <%= task.name %><% if task.user %><%=': ' + task.user.full_name %><% end %>
      </li>
    <% end %>
  <% end %>
</ul>
